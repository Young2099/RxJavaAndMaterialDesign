<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <ImageView
        android:clickable="true"
        android:id="@+id/drawer_home"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_drawer_home" />

    <ImageView
        android:id="@+id/default_avatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/drawer_home"
        android:src="@drawable/bili_default_avatar"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/drawer_home" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/default_avatar"
        android:text="未登录"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/default_avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/game_center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_menu_top_game_center" />

        <ImageView
            android:id="@+id/menu_download"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_toolbar_menu_download" />

        <ImageView
            android:id="@+id/menu_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_toolbar_menu_search" />
    </LinearLayout>
</RelativeLayout>